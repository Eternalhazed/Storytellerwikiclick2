{
  "name": "@storyteller/web",
  "version": "1.3.6",
  "private": true,
  "type": "module",
  "scripts": {
    "db:gen:internal": "DATABASE_URL=${STORYTELLER_DATA_DIR}/storyteller.db yarn kysely-codegen",
    "db:gen": "dotenvx run --env-file=.env.local -- yarn db:gen:internal",
    "db:migrate": "dotenvx run --env-file=.env.local -- tsx src/database/migrate.ts",
    "db:migrate:reset": "cp ${STORYTELLER_DATA_DIR}/storyteller.db ${STORYTELLER_DATA_DIR}/test.db",
    "db:migrate:test": "dotenvx run --env-file=.env.local -- yarn db:migrate:reset && STORYTELLER_DB_FILENAME=test.db yarn db:migrate",
    "dev": "yarn build:sqlite-ext && yarn db:migrate && yarn dev:worker && STORYTELLER_WORKER=worker.js PORT=8001 next dev",
    "dev:worker": "esbuild src/work/worker.ts --bundle --platform=node --packages=external --sourcemap=inline --format=esm --outdir=work-dist/",
    "test": "yarn build:sqlite-ext && STORYTELLER_DATA_DIR=src/__fixtures__/__output__ tsx --test",
    "test:watch": "yarn build:sqlite-ext && STORYTELLER_DATA_DIR=src/__fixtures__/__output__ tsx --test --watch",
    "test:all": "yarn build:sqlite-ext && STORYTELLER_DATA_DIR=src/__fixtures__/__output__ tsx --test src/__tests__/*.test.ts src/*/__tests__/*.test.ts",
    "build": "yarn build:sqlite-ext && yarn build:worker && yarn build:migrate && next build",
    "build:sqlite-ext": "gcc -g -fPIC -rdynamic -shared sqlite/uuid.c -o sqlite/uuid.c.so",
    "build:worker": "esbuild src/work/worker.ts --bundle --platform=node --loader:.node=file --sourcemap=inline --format=cjs --external:winax --external:@echogarden/vosk --out-extension:.js=.cjs --define:import.meta.url=import_meta_url --inject:./src/work/import.meta.url-polyfill.js --outdir=work-dist/",
    "build:migrate": "esbuild src/database/migrate.ts --bundle --platform=node --loader:.node=file --sourcemap=inline --format=cjs --out-extension:.js=.cjs --define:import.meta.url=import_meta_url --inject:./src/work/import.meta.url-polyfill.js --outdir=migrate-dist/",
    "start": "./start.sh"
  },
  "dependencies": {
    "@echogarden/espeak-ng-emscripten": "^0.3.3",
    "@esfx/async-semaphore": "^1.0.0",
    "@mantine/core": "^7.0.0",
    "@mantine/dates": "^7.0.0",
    "@mantine/form": "^7.15.1",
    "@mantine/hooks": "^7.0.0",
    "@reduxjs/toolkit": "^2.8.2",
    "@scalar/nextjs-openapi": "^0.1.17",
    "@smoores/epub": "workspace:*",
    "@smoores/fs": "workspace:*",
    "@tabler/icons-react": "^3.26.0",
    "@uppy/core": "^4.4.6",
    "@uppy/dashboard": "^4.3.4",
    "@uppy/react": "^4.3.0",
    "@uppy/tus": "^4.2.2",
    "@zip.js/zip.js": "^2.7.40",
    "argon2": "^0.40.1",
    "axios": " 1.6.7",
    "better-sqlite3": "^11.1.2",
    "busboy": "^1.6.0",
    "classnames": "^2.5.1",
    "content-disposition": "^1.0.0",
    "date-fns": "^3.6.0",
    "dayjs": "^1.11.13",
    "dbgate-query-splitter": "^4.11.3",
    "echogarden": "^2.3.1",
    "fuse.js": "^7.1.0",
    "he": "^1.2.0",
    "jsonwebtoken": "^9.0.2",
    "kysely": "^0.28.2",
    "match-sorter": "^6.3.4",
    "memoize": "^10.0.0",
    "mime-types": "^2.1.35",
    "music-metadata": "^7.14.0",
    "next": "^15.1.2",
    "next-auth": "^5.0.0-beta.28",
    "nodemailer": "^6.9.13",
    "pino": "^9.5.0",
    "pino-pretty": "^13.0.0",
    "piscina": "^4.4.0",
    "postcss-import": "^16.1.0",
    "react": "^19.0.0",
    "react-circular-progressbar": "^2.2.0",
    "react-dom": "^19.0.0",
    "react-redux": "^9.2.0",
    "sharp": "^0.33.2",
    "simple-git": "^3.25.0",
    "tsx": "^4.7.2",
    "wink-eng-lite-web-model": "^1.8.0",
    "wink-nlp": "^2.3.0"
  },
  "packageManager": "yarn@4.1.1",
  "devDependencies": {
    "@dotenvx/dotenvx": "^1.44.1",
    "@tsconfig/strictest": "^2.0.5",
    "@types/better-sqlite3": "^7.6.11",
    "@types/busboy": "^1",
    "@types/content-disposition": "^0.5.8",
    "@types/he": "^1",
    "@types/jsonwebtoken": "^9",
    "@types/mime-types": "^2",
    "@types/node": "^22.10.1",
    "@types/nodemailer": "^6",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "autoprefixer": "^10.4.20",
    "esbuild": "^0.23.0",
    "kysely-codegen": "^0.18.5",
    "next-openapi-gen": "^0.1.2",
    "postcss": "^8.4.49",
    "postcss-preset-mantine": "^1.17.0",
    "postcss-simple-vars": "^7.0.1",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.8.3",
    "typescript-plugin-css-modules": "^5.0.1"
  }
}
