    "@types/node": "^22.10.1",
    "@types/nodemailer": "^6",
    "@types/react": "npm:types-react@19.0.0-rc.1",
    "@types/react-dom": "npm:types-react-dom@19.0.0-rc.1",
    "@types/stream-chain": "^2",
    "@types/stream-json": "^1",
    "esbuild": "^0.23.0",
    "openapi-typescript-codegen": "^0.24.0",
    "stream-chain": "^2.2.5",
    "stream-json": "^1.8.0",
    "tsx": "^4.7.2",
    "typescript": "^5.4.3",
    "typescript-plugin-css-modules": "^5.0.1"
  }
