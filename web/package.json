{
  "name": "@storyteller/web",
  "version": "0.4.40",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "tsx database/migrate.ts && PORT=8001 next dev --turbopack",
    "test": "STORYTELLER_DATA_DIR=__fixtures__/__output__ tsx --test",
    "test:watch": "STORYTELLER_DATA_DIR=__fixtures__/__output__ tsx --test --watch",
    "test:all": "STORYTELLER_DATA_DIR=__fixtures__/__output__ tsx --test __tests__/*.test.ts */__tests__/*.test.ts",
    "build": "yarn build:worker && next build",
    "build:worker": "esbuild work/worker.ts --bundle --platform=node --sourcemap=inline --format=esm --packages=external --outdir=work-dist/",
    "start": "tsx database/migrate.ts && next start",
    "client:gen": "openapi --input http://127.0.01:8000/openapi.json --output ./apiModels"
  },
  "dependencies": {
    "@ariakit/react": "^0.4.1",
    "@echogarden/espeak-ng-emscripten": "^0.3.3",
    "@smoores/epub": "workspace:*",
    "@smoores/fs": "workspace:*",
    "@zip.js/zip.js": "^2.7.40",
    "argon2": "^0.40.1",
    "axios": " 1.6.7",
    "better-sqlite3": "^11.1.2",
    "busboy": "^1.6.0",
    "classnames": "^2.5.1",
    "date-fns": "^3.6.0",
    "debug": "^4.3.4",
    "echogarden": "^2.0.7",
    "form-data": "^4.0.0",
    "http-proxy": "^1.18.1",
    "js-levenshtein": "^1.1.6",
    "jsonwebtoken": "^9.0.2",
    "match-sorter": "^6.3.4",
    "memoize": "^10.0.0",
    "mime-types": "^2.1.35",
    "music-metadata": "^7.14.0",
    "next": "15.0.3",
    "nodemailer": "^6.9.13",
    "piscina": "^4.4.0",
    "react": "19.0.0-rc-66855b96-20241106",
    "react-circular-progressbar": "^2.1.0",
    "react-dom": "19.0.0-rc-66855b96-20241106",
    "sharp": "^0.33.2",
    "simple-git": "^3.25.0",
    "wink-eng-lite-web-model": "^1.8.0",
    "wink-nlp": "^2.3.0"
  },
