  "version": "0.2.0",
  "configurations": [
    {
      "name": "Node.js: Current test",
      "request": "launch",
      "runtimeArgs": [
        "workspace",
        "@storyteller/web",
        "tsx",
        "--test",
        "${fileDirname}/__tests__/${fileBasenameNoExtension}.test.ts"
      ],
      "runtimeExecutable": "yarn",
      "skipFiles": ["<node_internals>/**"],
      "type": "node"
    },
    {
      "name": "Python: FastAPI",
      "type": "debugpy",
      "request": "launch",
      "module": "uvicorn",
      "args": ["--host", "0.0.0.0", "--reload", "storyteller.api:app"],
      "justMyCode": false
    }
  ]
}
