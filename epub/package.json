{
  "name": "@smoores/epub",
  "version": "0.1.9",
  "type": "module",
  "module": "index.js",
  "types": "index.d.ts",
  "license": "MIT",
  "exports": {
    ".": {
      "import": "./index.js",
      "require": "./node.cjs",
      "types": "./index.d.ts",
      "node": "./node.js"
    },
    "./node": {
      "import": "./node.js",
      "require": "./node.cjs",
      "types": "./node.d.ts"
    }
  },
  "files": [
    "index.js",
    "node.js",
    "node.cjs",
    "index.cjs",
    "index.d.ts",
    "node.d.ts"
  ],
  "scripts": {
    "build:cjs": "yarn swc ./index.ts -o ./index.cjs --no-swcrc --config-file .swcrc-cjs && yarn swc ./node.ts -o ./node.cjs --no-swcrc --config-file .swcrc-cjs",
    "build:esm": "yarn swc ./index.ts -o ./index.js && yarn swc ./node.ts -o ./node.js",
    "build": "yarn tsc && yarn build:esm && yarn build:cjs",
    "readme:toc": "markdown-toc --maxdepth=5 --append='\n- [API Docs](#api-docs)' --bullets='-' -i readme-stub.md",
    "readme:api": "typedoc",
    "readme": "yarn readme:api && yarn readme:toc && cat readme-stub.md > README.md && tail -n +2 gen/README.md >> README.md",
    "test": "tsx --test",
    "test:watch": "tsx --test --watch"
  },
  "devDependencies": {
    "@swc/cli": "^0.5.2",
    "@swc/core": "^1.10.0",
    "@tsconfig/strictest": "^2.0.5",
    "@types/mime-types": "^2",
    "@types/node": "^22.10.1",
    "markdown-toc": "^1.2.0",
    "remark-toc": "^9.0.0",
    "tsx": "^4.19.2",
    "typedoc": "^0.28.4",
    "typedoc-plugin-markdown": "^4.6.3",
    "typedoc-plugin-remark": "^1.2.0",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "@einheit/path-resolve": "^1.2.0",
    "@smoores/fs": "workspace:^",
    "@zip.js/zip.js": "^2.0.0",
    "async-mutex": "^0.5.0",
    "fast-xml-parser": "^4.0.0",
    "mem": "^8.0.0",
    "mime-types": "^2.0.0",
    "nanoid": "^5.1.5",
    "path-dirname": "^1.0.2"
  },
  "publishConfig": {
    "access": "public"
  }
}
